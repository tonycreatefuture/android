<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/trainnet_button_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.20"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/trainnet_left"
        android:clickable="true" />

    <EditText
        android:id="@+id/trainnet_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.60"
        android:background="@drawable/trainnet_courseborder"
        android:drawableLeft="@drawable/trainnet_search"
        android:gravity="left|center_vertical"
        android:hint="@string/searchCourse"
        android:imeOptions="actionSearch"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textSize="18sp" />

    <Button
        android:id="@+id/trainnet_button_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="0.20"
        android:background="@color/app_background"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="invisible" />

</LinearLayout>